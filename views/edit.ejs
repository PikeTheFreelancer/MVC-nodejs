<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
<form class="col-6 border border-dark rounded p-3 m-auto" action="/save" method="POST">
    <% for (let post of posts ) {  %>
        <div class="form-group mb-3">
            <label for="title">ID</label>
            <input class="form-control" name="id" id="title" value='<%= post.id %>' readonly>
            <label for="title">Title</label>
            <input class="form-control" name="title" id="title" value='<%= post.title %>'>
        </div>
        
        <div class="form-group mt-3 ">       
            <button type="submit" class="btn btn-primary px-4 py-2 text-white"> Save </button>
        </div>
    <% }  %>
</form>    
</div>