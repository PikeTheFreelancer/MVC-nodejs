<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container col-8 p-4">
    <form class="mb-4" action="/search" method="GET">
    
      <div class="form-group mb-3">
          <input class="form-control" name="searchStr" id="searchStr" placeholder="search...">
      </div>
      
      <div class="form-group mt-3 ">       
          <button type="submit" class="btn btn-primary px-4 py-2 text-white"> Search </button>
      </div>
    </form>   
    <table class="table table-bordered">
      <tr>
          <th>id</th>
          <th>Title</th>
          <th colspan="2" class="text-center">action</th>
      </tr>
      <% for (let post of posts ) {  %>
      <tr>
          <td><%= post.id %> </td>        
          <td><%= post.title %> </td>
          <td><a href="/edit?id=<%= post.id %>">edit</a></td>
          <td><a href="/delete?id=<%= post.id %>">delete</a></td>
      </tr>
      <% } %>
      <tr>
        <td colspan="4"><a href="/create">Add post</a></td>
      </tr>
    </table>
  </div>
</body>
</html>
